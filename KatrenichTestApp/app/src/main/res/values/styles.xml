<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CaptionPrimary" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_color_grey</item>
    </style>

    <style name="BaseText" parent="CaptionPrimary">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_color_black</item>
    </style>

</resources>
